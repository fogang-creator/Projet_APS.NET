@model IEnumerable<Metier.Domaine.Application>

@{
    ViewBag.Title = "Index";
}
<h2 style="margin-bottom:60px; margin-top: 50px; color:blue; font-weight: bold; text-align: center;">  Ajouter l'application concernée </h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table"  style="background-color:black; color: white;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Libelle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Version)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Libelle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Version)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ApplicationID }) 
            </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ApplicationID }) 
            </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ApplicationID })
        </td>
    </tr>
}

</table>
